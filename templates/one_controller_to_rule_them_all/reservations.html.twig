{% extends 'base.html.twig' %}

{% block body %}

<div class="container mt-5">
    <button class="btn btn-warning"><a class="text-decoration-none text-white" href="/">Home</a></button>
</div>

<h1 class="container mt-5 d-flex justify-content-center">Reservations</h1>


<div class="container mt-5">
<table id="table_id" class="table table-striped table-hover text-center
                 mt-5">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Vehicle</th>
        </tr>
    </thead>
    <tbody>
        {% for rent in rents %}
            <tr>
            <td>{{ rent.getDeliverer().getId() }}</td>
                <td>{{ rent.getDeliverer().getName() }}</td>
                <td>{{ rent.getVehicle().getBrand() }}</td>
                
            </tr>        
        {% endfor %}
    </tbody>
</table>

</div>

{% endblock %}
