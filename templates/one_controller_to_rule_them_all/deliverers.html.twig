{% extends 'base.html.twig' %}

{% block body %}

<div class="container mt-5">
    <button class="btn btn-primary"><a class="text-decoration-none text-white" href="/add-deliverer">Add new deliverer</a></button>
    <button class="btn btn-warning"><a class="text-decoration-none text-white" href="/">Home</a></button>
</div>

<h1 class="container mt-5 d-flex justify-content-center">Deliverers</h1>



<div class="container mt-5">
<table id="table_id" class="table table-striped table-hover text-center
                 mt-5">
    <thead>
        <tr>
            <th>Name</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        {% for deliverer in deliverers %}
            <tr>
                <td>{{ deliverer.getName() }}</td>
                <td><div class="row row-cols">
                                        <div class="col">
                                            <button class="btn btn-success"><a class="text-decoration-none text-white" href="#">Reserve Vehicle</a></button>
                                            <button class="btn btn-warning"><a class="text-decoration-none text-white" href="{{ path('reservation-history-deliverer', {'id': deliverer.id}) }}">Reservation History</a></button>
                                        </div>
                                    </div>
                </td>
            </tr>        
        {% endfor %}
    </tbody>
</table>
</div>

{% endblock %}
