{% extends 'base.html.twig' %}

{% block body %}

<div class="container mt-5">
    <button class="btn btn-primary"><a class="text-decoration-none text-white" href="/add-vehicle">Add new vehicle</a></button>
    <button class="btn btn-warning"><a class="text-decoration-none text-white" href="/">Home</a></button>
</div>

<h1 class="container mt-5 d-flex justify-content-center">Vehicles</h1>



<div class="container mt-5">
<table id="table_id" class="table table-striped table-hover text-center
                 mt-5">
    <thead>
        <tr>
            <th>Vehicle</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        {% for vehicle in vehicles %}
            <tr>
                <td>{{ vehicle.getBrand() }}</td>
                <td><div class="row row-cols">
                                        <div class="col">
                                            <button class="btn btn-warning"><a class="text-decoration-none text-white" href="{{ path('reservation-history-vehicle', {'id': vehicle.id}) }}">Reservation History</a></button>
                                        </div>
                                    </div>
                </td>
            </tr>        
        {% endfor %}
    </tbody>
</table>
</div>

{% endblock %}
